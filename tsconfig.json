{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "newLine": "LF",
    "jsx": "react",
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "lib", "dist"]
}
